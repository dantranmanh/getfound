<?xml version="1.0"?>
<config>
   <tabs>
        <softwebwork translate="label">
            <label>Softwebwork Extension</label>
            <sort_order>450</sort_order>
        </softwebwork>
    </tabs>
     
    <sections>
        <softwebwork_headerimage translate="label" module="softwebwork_headerimage">
            <label>Header Image Settings</label>
            <tab>softwebwork</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                
                    <fields>
                        <enable>
                            <label>Enable Header Image</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </enable>
						<width>
                            <label>Header Image Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
							<validate>validate-number</validate>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </width>
						<height>
                            <label>Header Image Height</label>
                            <frontend_type>text</frontend_type>
							<validate>validate-number</validate>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                
                        </height>
                    </fields>
					
                </general>
            </groups>                
        </softwebwork_headerimage>
    </sections>
</config>